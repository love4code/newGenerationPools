<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <% if (typeof baseUrl === 'undefined') { %>
    <% var baseUrl = ''; %>
  <% } %>
  <%- include('seo', { baseUrl: baseUrl }) %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <style>
    <%
      // Get theme settings or use defaults
      let theme = typeof settings !== 'undefined' && settings && settings.theme ? settings.theme : {
        preset: 'default',
        primaryColor: '#0d6efd',
        secondaryColor: '#6c757d',
        navbarColor: '#212529',
        footerColor: '#2c3e50',
        fontFamily: 'system-ui, -apple-system, sans-serif'
      };
      
      // Apply preset if not custom (this should already be done in controller, but just in case)
      const themePresets = {
        default: { primaryColor: '#0d6efd', secondaryColor: '#6c757d', navbarColor: '#212529', footerColor: '#2c3e50' },
        ocean: { primaryColor: '#0066cc', secondaryColor: '#4da6ff', navbarColor: '#003366', footerColor: '#004080' },
        sky: { primaryColor: '#3399ff', secondaryColor: '#66b3ff', navbarColor: '#1a5490', footerColor: '#2d6ba3' },
        navy: { primaryColor: '#1e3a8a', secondaryColor: '#3b82f6', navbarColor: '#0f172a', footerColor: '#1e293b' },
        teal: { primaryColor: '#0d9488', secondaryColor: '#14b8a6', navbarColor: '#0f172a', footerColor: '#134e4a' }
      };
      
      if (theme.preset && theme.preset !== 'custom' && themePresets[theme.preset]) {
        theme = { ...theme, ...themePresets[theme.preset] };
      }
    %>
    :root {
      --primary-color: <%= theme.primaryColor %>;
      --secondary-color: <%= theme.secondaryColor %>;
      --navbar-color: <%= theme.navbarColor %>;
      --footer-color: <%= theme.footerColor %>;
      --font-family: <%= theme.fontFamily || 'system-ui, -apple-system, sans-serif' %>;
    }
    
    body {
      font-family: var(--font-family);
    }
    
    .hero-section {
      min-height: 300px;
      max-height: 500px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      padding: 2rem 0;
    }
    .hero-overlay {
      background: transparent;
      padding: 1.5rem;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }
    .navbar {
      padding: 0.4rem 0;
      min-height: 56px;
    }
    .navbar-brand {
      font-size: 1.25rem;
      padding: 0.25rem 0;
    }
    .navbar-nav .nav-link {
      padding: 0.4rem 0.75rem;
    }
    .navbar-toggler {
      padding: 0.25rem 0.5rem;
      font-size: 1rem;
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .navbar-toggler:focus {
      box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
    }
    .navbar-collapse {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.35s ease-out;
    }
    .navbar-collapse.show {
      max-height: 500px;
      transition: max-height 0.35s ease-in;
    }
    @media (min-width: 992px) {
      .navbar-collapse {
        max-height: none !important;
        overflow: visible !important;
      }
    }
    @media (max-width: 991.98px) {
      .navbar-collapse {
        margin-top: 0.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 0.5rem;
      }
      .navbar-nav {
        text-align: center;
      }
      .navbar-nav .nav-link {
        padding: 0.5rem 0;
      }
    }
    @media (max-width: 768px) {
      .hero-section {
        min-height: 200px;
        padding: 1rem 0;
      }
      .hero-overlay {
        padding: 1rem;
        margin: 0 1rem;
      }
      .hero-overlay h1 {
        font-size: 1.75rem;
      }
      .hero-overlay .lead {
        font-size: 1rem;
      }
      .navbar {
        padding: 0.3rem 0;
        min-height: 50px;
      }
      .navbar-brand {
        font-size: 1.1rem;
      }
    }
    .navbar-dark {
      background-color: var(--navbar-color) !important;
    }
    .btn-primary {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
    }
    .btn-primary:hover {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
      opacity: 0.9;
    }
    .btn-outline-primary {
      color: var(--primary-color);
      border-color: var(--primary-color);
    }
    .btn-outline-primary:hover {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
    }
    footer {
      background-color: var(--footer-color) !important;
      color: white;
      padding: 2rem 0;
      margin-top: 4rem;
    }
    a {
      color: var(--primary-color);
    }
    a:hover {
      color: var(--primary-color);
      opacity: 0.8;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container">
      <a class="navbar-brand" href="/">New Generation Pools</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/services">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/portfolio">Portfolio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          <% if (isAuthenticated && session && session.isAuthenticated) { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin" style="color: #ffc107; font-weight: 600;">
                <i class="bi bi-shield-lock"></i> Admin
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

