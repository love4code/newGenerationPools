<%- include('../../partials/admin-header') %>

<% if (typeof success !== 'undefined' && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Products</h1>
  <a href="/admin/products/new" class="btn btn-primary">Create New Product</a>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Status</th>
          <th>Active</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.name %></td>
              <td>$<%= product.price.toFixed(2) %></td>
              <td>
                <span class="badge bg-<%= product.status === 'published' ? 'success' : 'secondary' %>">
                  <%= product.status %>
                </span>
              </td>
              <td>
                <span class="badge bg-<%= product.isActive ? 'success' : 'secondary' %>">
                  <%= product.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td><%= new Date(product.createdAt).toLocaleDateString() %></td>
              <td>
                <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-outline-primary">Edit</a>
                <form method="POST" action="/admin/products/<%= product._id %>/delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                  <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center text-muted">No products found. <a href="/admin/products/new">Create one</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../../partials/admin-footer') %>

